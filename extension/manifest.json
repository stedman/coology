{
	"manifest_version": 2,
	"name": "Coology",
	"description": "Awesome Schoology themes extension",
  "version": "0.13.3",
  "icons": {
    "48": "icons/Coology-48.png",
    "96": "icons/Coology-96.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
	"content_scripts": [{
		"matches": ["*://*.schoology.com/*"],
		"css": ["coology.css", "themes.css"],
		"js": ["coology.js"],
		"run_at": "document_end"
  }],
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/Coology-48.png",
      "96": "icons/Coology-96.png"
    }
  },
  "permissions": [
    "storage",
    "tabs"
  ],
	"author": "Steve Stedman"
}
